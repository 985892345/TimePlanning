<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/litterWhite"
    tools:context=".activity.MainActivity">

    <View
        android:id="@+id/view_statusBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_statusBar"
        app:subtitleTextColor="@android:color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/vp_time_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_week_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textSize="@dimen/week_textSize"
                app:layout_constraintEnd_toStartOf="@+id/tv_week_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_week_1" />

            <TextView
                android:id="@+id/tv_week_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一"
                android:textSize="@dimen/week_textSize"
                app:layout_constraintEnd_toStartOf="@+id/tv_week_2"
                app:layout_constraintStart_toEndOf="@+id/tv_week_8"
                app:layout_constraintTop_toTopOf="@+id/tv_week_2" />

            <TextView
                android:id="@+id/tv_week_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二"
                android:textSize="@dimen/week_textSize"
                app:layout_constraintEnd_toStartOf="@+id/tv_week_3"
                app:layout_constraintStart_toEndOf="@+id/tv_week_1"
                app:layout_constraintTop_toTopOf="@+id/tv_week_3" />

            <TextView
                android:id="@+id/tv_week_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三"
                android:textSize="@dimen/week_textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_week_4"
                app:layout_constraintStart_toEndOf="@+id/tv_week_2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_week_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四"
                android:textSize="@dimen/week_textSize"
                app:layout_constraintEnd_toStartOf="@+id/tv_week_5"
                app:layout_constraintStart_toEndOf="@+id/tv_week_3"
                app:layout_constraintTop_toTopOf="@+id/tv_week_3" />

            <TextView
                android:id="@+id/tv_week_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五"
                android:textSize="@dimen/week_textSize"
                app:layout_constraintEnd_toStartOf="@+id/tv_week_6"
                app:layout_constraintStart_toEndOf="@+id/tv_week_4"
                app:layout_constraintTop_toTopOf="@+id/tv_week_4" />

            <TextView
                android:id="@+id/tv_week_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="六"
                android:textSize="@dimen/week_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_week_5"
                app:layout_constraintTop_toTopOf="@+id/tv_week_5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_day_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_time_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/time_view_height"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>