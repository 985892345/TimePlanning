<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimeSelectView">
<!--        左侧时间间隔的宽度-->
        <attr name="intervalWidth" format="dimension"/>
<!--        每根水平线间隔的高度-->
        <attr name="intervalHeight" format="dimension"/>
<!--        任务边框颜色-->
        <attr name="borderColor" format="color"/>
<!--        任务内部颜色-->
        <attr name="insideColor" format="color"/>
<!--        左侧时间文字大小，其他时间文字大小会依据该值进行缩小-->
        <attr name="timeTextSize" format="dimension"/>
<!--        任务名称文字大小-->
        <attr name="taskTextSize" format="dimension"/>
<!--        设置居中的时间，支持小数-->
<!--        若传入的时间处于上下边界附近无法居中的位置，则会使时间线处于顶部或尾部界面内，但不居中。-->
<!--        若不设置，则会自动以当前时间居中。-->
        <attr name="centerTime" format="float"/>
<!--        设置开始时间，不设置默认为2-->
        <attr name="startHour" format="integer"/>
<!--        设置结束时间，不设置默认为明天2点-->
<!--        支持设置明天的时间，但请加上24，如：设置成明天的2点，就输入26-->
        <attr name="endHour" format="integer"/>
<!--        最终的任务区域是否展示上下边界时间，在移动和改变大小时任然会展示-->
<!--        该boolean为static，一旦设置，所有的TimeSelectView都会设置-->
        <attr name="isShowTopBottomTime" format="boolean"/>
<!--        最终的任务区域是否展示时间差，在移动和改变大小时任然会展示-->
<!--        该boolean为static，一旦设置，所有的TimeSelectView都会设置-->
        <attr name="isShowDifferentTime" format="boolean"/>

    </declare-styleable>
</resources>